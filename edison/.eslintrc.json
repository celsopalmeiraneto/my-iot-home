{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "google"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "ignorePatterns": "build/**/*",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": "off",
    "object-curly-spacing": ["error", "always"],
    "indent": [
      "error",
      2,
      {
        "FunctionDeclaration": {
          "body": 1,
          "parameters": 1
        }
      }
    ]
  }
}
